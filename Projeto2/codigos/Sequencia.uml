@startuml
title UC_Gerenciar
actor Usuario_Master as m
participant Usuario as u
u -> m: Requisita autorização;
alt requisição aprovada
m -> u: GerenciarAutoridade();
else requisição reprovada
m -> u: Requisição foi reprovada
end
@enduml

@startuml
title UC_Cadastrar
actor Recepcionista as r
participant Sistema as s
r -> s: Cadastro();
@enduml

@startuml
title UC_Reconhecer
actor Elevador
participant Usuário   
Usuário -> Elevador: Mostra o rosto para a câmera
Elevador -> Usuário: Reconhecimento()
alt Usuário é VIP
    Elevador -> Usuário: Leva o usuário para o andar VIP escolhido 
else Usuário não é VIP
    Elevador -> Usuário: Elevador funciona normalmente
end
@enduml

@startuml
title UC_Selecionar

actor Elevador
actor Usuário   
Usuário -> Elevador: ChamarElevador()
alt Elevador está em andar diferente do usuário
    Usuário -> Elevador: Sinal emitido para o elevador 
else Elevador está no mesmo andar do usuário
    Elevador -> Usuário: AbrirPortas()
end
@enduml
