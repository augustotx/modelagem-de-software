@startuml
title UC_Gerenciar
start
:Usuário envia requisição de autorização;
:Usuário master avalia requisição;
if (Deu autorização?) then (Sim)
  :Usuário master aprova troca de nível de autorização no sistema;
  : Usuário tem nível de autorização desejado;
else (Não)
  :Usuário master não concede autorização e encerra o processo;
endif
stop

@enduml

@startuml
title UC_Selecionar
start
:Usuário seleciona andar desejado na botoeira externa;
:Sinal de chamada para o elevador é emitido;
if(Elevador já está no andar do usuário?) then (Sim)
   :Portas do elevador se abrem;
end if

stop
@enduml
@startuml
title UC_Cadastrar 
start
:Recepcionista abre página de check-in de VIP;
repeat
:Recepcionista escreve e envia informações do hóspede no sistema;
if (Informações são aceitas?) then (Sim)
  :Sistema retorna confirmação de cadastro;
else (Não)
  :Sistema reporta erro e aponta quais campos de cadastro estão errados;
endif
repeat while(Informações erradas?) is (Sim) not (Não)



stop
@enduml
@startuml
title UC_Controlar
start
:Elevador detecta peso acima do limite;
repeat
:Elevador emite sinal de aviso;
:Elevador aguarda parado;
repeat while (Peso ainda esta acima do limite) is (sim) not (não)
:Elevador volta ao habitual;
stop
@enduml

@startuml
title UC_Locomover
start
:Elevador recebe sinal de chamada para um andar diferente do atual;
:Elevador fecha portas;
:Elevador anda até o andar de destino;
if (Houve alguma abnormalidade detectada?) then (Sim)
  :Elevador para no andar mais próximo;
else (Não)
  :Elevador chega no andar de destino;
endif
:Elevador abre portas;
stop

@enduml

